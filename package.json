        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongoose": "^5.12.3"
    },
    "devDependencies": {
        "concurrently": "^6.0.2",
        "nodemon": "^2.0.7"
    }
